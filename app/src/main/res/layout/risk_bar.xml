<?xml version="1.0" encoding="utf-8"?>
<com.teambrella.android.ui.widget.VoterBoxView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="75dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:background="@color/blueGrey" />


    <com.teambrella.android.ui.widget.AkkuratBoldTextView
        android:id="@+id/risk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/darkSkyBlue"
        android:padding="2dp"
        android:textColor="@android:color/white"
        tools:text="1.26" />


</com.teambrella.android.ui.widget.VoterBoxView>