<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.teambrella.android.ui.widget.AkkuratBoldTextView
            style="@style/Teambrella.Teammate.Section.TextAppearence.Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voting_risk" />

        <com.teambrella.android.ui.widget.CountDownClock
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="32dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <com.teambrella.android.ui.widget.AkkuratBoldTextView
                style="@style/Teambrella.Teammate.Section.TextAppearence.Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/team_vote" />

            <com.teambrella.android.ui.widget.AkkuratBoldTextView
                android:id="@+id/team_vote_risk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:textSize="36sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/your_vote_background"
            android:orientation="vertical"
            android:padding="8dp">

            <com.teambrella.android.ui.widget.AkkuratBoldTextView
                style="@style/Teambrella.Teammate.Section.TextAppearence.Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_vote" />

            <com.teambrella.android.ui.widget.AkkuratBoldTextView
                android:id="@+id/your_vote_risk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/dark"
                android:textSize="36sp" />
        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.teambrella.android.ui.widget.VoterBar
            android:id="@+id/voter_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@android:color/black" />

    </RelativeLayout>


    <!--<SeekBar-->
    <!--android:id="@+id/voting_control"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="16dp" />-->

</LinearLayout>