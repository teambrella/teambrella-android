<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Teambrella" />

    <style name="Teambrella.TextAppearence">
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="Teambrella.ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/listItemBackground</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Teambrella.ListItem.Icon" parent="Teambrella">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="Teambrella.TextAppearence.ListItem.Indicator">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
    </style>

    <style name="Teambrella.TextAppearence.ListItem" />

    <style name="Teambrella.TextAppearence.ListItem.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3948</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Teambrella.TextAppearence.ListItem.Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#7b8d9a</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Teambrella.TextAppearence.ListItem.Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3948</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Teambrella.TextAppearence.Tab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="Teambrella.ListDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@color/paleGrey</item>
    </style>

    <style name="Teambrella.Teammate" />

    <style name="Teambrella.Teammate.HeaderView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">210dp</item>
        <item name="android:background">@drawable/user_profile_background</item>
    </style>

    <style name="Teambrella.Teammate.Avatar">
        <item name="android:layout_height">88dp</item>
        <item name="android:layout_width">88dp</item>
    </style>

    <style name="Teambrella.Teammate.HeaderView.TextAppearence" />

    <style name="Teambrella.Teammate.Section" />

    <style name="Teambrella.Teammate.Section.TextAppearence" />


    <style name="Teambrella.Teammate.Section.TextAppearence.Normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/charcoalGrey</item>
    </style>


    <style name="Teambrella.Teammate.Section.TextAppearence.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/charcoalGrey</item>
    </style>

    <style name="Teambrella.Teammate.Section.TextAppearence.Info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/blueGrey</item>
    </style>

    <style name="Teambrella.Teammate.Section.TextAppearence.Header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/darkSkyBlue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Teambrella.Teammate.HeaderView.TextAppearence.CoverTitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/blueGrey</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Teambrella.Teammate.HeaderView.TextAppearence.CoverValue" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Teambrella.Teammate.HeaderView.TextAppearence.CoverCurrency" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/darkSkyBlue</item>
        <item name="android:text">USD</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Teambrella.TextAppearence.MessageTitle">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Teambrella.TextAppearence.MessageText">
        <item name="android:textColor">@color/bluishGrey</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>